<div class="row">
  <div class="col-md-3 offset-md-1">
    <%= render "users/info", user: @user %>
    <%= render "new", book: @book_new %>
  </div>
  <div class="col-md-7 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image, class: "resize-profile-image" %>
            <%= link_to @book.user.name, user_path(@user) %>
          </td>
          <td>
            <%= link_to book_path(@book) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <% if @user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book), data: {turbo_method: :delete, turbo_confirm: '本当に消しますか？'}, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>  
      </tbody>
    </table>
  </div>
</div>


