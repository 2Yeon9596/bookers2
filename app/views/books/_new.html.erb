<h2 class="mt-3">New Book</h2>
<%= form_with model: book do |f| %>
  <div class="form-group">
    <label for="book_title" class="form-label">Title</label>
    <%= f.text_field :title, class: "form-control book_title", id: "book_title" %>
  </div>
  <div class="form-group">
    <label for="book_opinion" class="form-label">Opinion</label>
    <%= f.text_area :body, class: "form-control book_opinion", id: "book_opinion" %>
  </div>
  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success mt-3" %>
  </div>
<% end %>  