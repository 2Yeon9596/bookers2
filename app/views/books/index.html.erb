<div class="container px-5 px-sm-0">
  <div id="explanation">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>  
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: @user %>
      <%= render "new", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="border-bottom p-1">Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td style="width: 150px;">
              <div>
                <%= image_tag book.user.get_profile_image, class: "resize-profile-image" %>
              </div> 
            </td>
            <td>
              <%= link_to book_path(book.id), class: "text-decoration-none" do %>
                <%= book.title %>
              <% end %>  
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>  
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



  

 


