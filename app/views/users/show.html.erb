<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "info", user: @user %>
      <%= render "books/new", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="border-bottom p-1">Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @user.books.each do |book| %>  
          <tr>
            <td style="width: 250px;">
               <%= image_tag @user.get_profile_image, class: "resize-profile-image" %> 
            </td>
            <td style="width: 250px;">
              <%= link_to book_path(book.id) do %>
                <%= book.title %><br>
              <% end %>
            </td>
            <td><%= book.body %></td>   
          </tr> 
        <% end %>   
        </tbody>
      </table>
    </div>
  </div>
</div>
